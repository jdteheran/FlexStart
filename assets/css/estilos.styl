
@font-face {
    font-family: 'Open Sans';
    src: url('../fonts/open-sans/OpenSans-Regular.ttf') format('truetype');
}

@font-face {
    font-family: 'Open Sans Bold';
    src: url('../fonts/open-sans/OpenSans-Bold.ttf') format('truetype');;
}

@font-face {
  font-family: 'iconitos';
  src:  url('../fonts/iconos/icomoon.eot?lmozq2');
  src:  url('../fonts/iconos/icomoon.eot?lmozq2#iefix') format('embedded-opentype'),
    url('../fonts/iconos/icomoon.ttf?lmozq2') format('truetype'),
    url('../fonts/iconos/icomoon.woff?lmozq2') format('woff'),
    url('../fonts/iconos/icomoon.svg?lmozq2#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: block;
}

*
    font-family: 'Open Sans'

header
    background-image: url('../imgs/hero-bg.png') 
    background-size: contain
    .barra
        .logo
            display: inline-block
            margin: 20px 0px 0px 70px
            img
                display: inline-block
            h3
                display: inline-block
                font-size: 30px
                color: #012970
                margin: 0px
        .lista
            display: inline-block
            float: right
            margin-top: 20px
            ul   
                li
                    display: inline-block
                    margin-right: 30px
                    a
                        font-family: 'Open Sans Bold'
                        text-decoration: none
                        color: #023289
                li:first-child, li:nth-last-child(2)
                    a
                        color: #4e5ff2
                li:nth-last-child(3)
                    a:after
                        font-family: 'Open Sans Bold'
                        display: inline-block
                        transform: rotate(90deg)
                        content: ">"
                        margin-left: 2px
                        font-weight: 900
                        color: #cad3e6
                li:last-child
                    margin-right: 50px
                    border-radius: 5px
                    padding: 8px 20px
                    background-color: #4e5ff2
                    a
                        color: white 
    .banner
        .titulo, .imagen
            width: 45%
            display: inline-block
        .titulo
            vertical-align: top
            margin: 70px 0px 0px 70px
            h1
                color: #012970
                width: 60%
                font-weight: bold
            p
                color: #454646
                font-size: 18px
                width: 60%
                font-weight: bold
            button
                padding: 10px 35px
                margin-top: 15px
                background-color: #4153f1
                color: white
                border: 0px
                border-radius: 5px
                .flecha:after
                    content: "â†’"
                    


