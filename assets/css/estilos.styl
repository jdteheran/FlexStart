.precios
    margin-bottom: 70px
    .titulos
        text-align: center
        margin-bottom: 35px
        h4
            color: #4153f1
            text-transform: uppercase
            margin: 0px
        p
            color: #012970
            font-size: 40px
            font-weight: bold
            margin: 0px
    .tarjetas
        text-align: center
        div
            width: 300px
            display: inline-block
            text-align: center
            margin-left: 15px
            margin-right: 15px
            -webkit-box-shadow: 0px 0px 67px 23px rgba(246,247,249,1);
            -moz-box-shadow: 0px 0px 67px 23px rgba(246,247,249,1);
            box-shadow: 0px 0px 67px 23px rgba(246,247,249,1);
            position relative
            overflow: hidden
            .paralelog
                border: 1px solid #aaa
                background-color: #4153f1
                color: white
                padding: 5px 0px
                width: 150px
                position: absolute
                right: -40px
                top: 5px
                transform: rotate(45deg)
            h5
                font-size: 18px
            .free
                color: #03d5c0
            .starter
                color: #65c602
            .business
                color: #ff9221
            .ultimate
                color: #ff0071
            .valor
                font-family: 'Open Sans Bold'
                font-size: 30px
                .signo
                    font-size: 20px
                    position: relative
                    font-weight: bold
                    bottom: 15px
                .moneda
                    font-size: 16px
                    font-weight: normal
                    color: #bbbbbb

            img
                width: 200px
            ul
                margin-top: 25px
                padding-left: 0px
                li
                    margin-bottom: 15px
                    list-style: none
                .tachado
                    text-decoration-line: line-through
                    color: #bbbbbb
            button
                margin: 25px 0px 50px 0px
                padding: 10px 40px
                border-radius: 20px
                background-color: white
                font-weight: bold
                color: #4153f1
                border: 1px solid #a7aff8

